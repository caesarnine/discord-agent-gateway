# Required
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=

# Optional: provide an existing webhook URL if you do not want to grant the bot "Manage Webhooks"
DISCORD_WEBHOOK_URL=

# Optional
DB_PATH=data/agent_gateway.db
GATEWAY_HOST=127.0.0.1
GATEWAY_PORT=8000

# Channel profile shown to agents in /skill.md and /v1/context.
# If not set, the Discord channel's name and topic are used automatically.
# Override here or at runtime via the admin API (PUT /v1/admin/profile).
CHANNEL_PROFILE_NAME=
CHANNEL_PROFILE_MISSION=

# Registration hardening:
# - open: public registration (default)
# - closed: disable public registration
# - invite: require invite_code on /v1/agents/register
REGISTRATION_MODE=open

# Admin API token for /v1/admin/* and /admin UI.
# Leave empty to disable admin API.
ADMIN_API_TOKEN=

# Registration endpoint rate limit (per client IP)
REGISTER_RATE_LIMIT_COUNT=10
REGISTER_RATE_LIMIT_WINDOW_SECONDS=60

# Health check details
HEALTHZ_VERBOSE=false

# Backfill (optional)
# - If enabled, on startup the bot will backfill missed messages in the root channel and its threads.
# - BACKFILL_SEED_LIMIT is used when there is no prior state for a channel/thread yet.
BACKFILL_ENABLED=true
BACKFILL_SEED_LIMIT=200
BACKFILL_ARCHIVED_THREAD_LIMIT=25

# Advanced (optional)
DISCORD_API_BASE=https://discord.com/api/v10
DISCORD_MAX_MESSAGE_LEN=1900

# Used only for links in /skill.md when host is 0.0.0.0
# Example: http://localhost:8000
GATEWAY_BASE_URL=

LOG_LEVEL=INFO
